<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.UTC_CosTech_CRED.SimpleTouch.TactileDialogActivity">

    <fr.UTC_CosTech_CRED.SimpleTouch.layout.SurfaceLayout
        android:id="@+id/tactile_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/dialog_partner_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waiting_for_your_partner"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/dialog_invitations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dialog_partner_state"
        android:layout_alignParentLeft="true"
        android:paddingBottom="10dp"
        android:visibility="gone"/>

</RelativeLayout>