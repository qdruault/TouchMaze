<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.labocred.circle.TestBoxActivity">

    <!--<com.example.labocred.waveleft.MainLayout
        android:id="@+id/test_tactile_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>-->

    <Button
        android:id="@+id/launchSequence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="98dp"
        android:onClick="onClick"
        android:text="Lancer la séquence"
        android:layout_alignBottom="@+id/stopSequence"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/stopSequence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="175dp"
        android:onClick="onClick"
        android:text="Stopper la séquence" />
</RelativeLayout>